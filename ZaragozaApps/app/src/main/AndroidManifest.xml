<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zaragozaapps.zaragozaapps" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.zaragozaapps.touchgame.TouchGame"
            android:label="@string/touch_game"
            android:parentActivityName="com.example.zaragozaapps.zaragozaapps.MainActivity" >
            <meta-data
                android:name="Touch Game"
                android:value="com.example.zaragozaapps.touchgame.TouchGame" />
        </activity>

        <activity
            android:name="com.example.zaragozaapps.touchgame.InitTouchGame"
            android:label="@string/touch_game"
            android:parentActivityName="com.example.zaragozaapps.zaragozaapps.MainActivity" >
            <meta-data
                android:name="Touch Game"
                android:value="com.example.zaragozaapps.touchgame.InitTouchGame" />
        </activity>

        <activity
            android:name="com.example.zaragozaapps.zaragozaapps.SetUserName"
            android:label="@string/name_user"
            android:parentActivityName="com.example.zaragozaapps.zaragozaapps.MainActivity" >
            <meta-data
                android:name="Set user name"
                android:value="com.example.zaragozaapps.zaragozaapps.SetUserName" />
        </activity>

    </application>

</manifest>
